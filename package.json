{
  "version": "1.0.5",
  "name": "@vernaillen/renovate-config",
  "description": "vernaillen preset configs for Renovate",
  "homepage": "https://github.com/vernaillen/renovate-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/vernaillen/renovate-config.git"
  },
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "vernaillen",
    "renovate",
    "config"
  ],
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/vernaillen/renovate-config/issues"
  },
  "scripts": {
    "lint:ec": "npx editorconfig-checker --config .editorconfig",
    "lint:md": "npx remark --quiet --frail .",
    "lint": "npm-run-all -p lint:*"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "default:pinDigestsDisabled",
        "default:separatePatchReleases",
        "default:semanticCommits",
        "default:preserveSemverRanges",
        "default:prConcurrentLimitNone",
        "default:prHourlyLimitNone",
        "default:timezone(Europe/Brussels)",
        "default:label(dependencies)"
      ],
      "packageRules": [
        {
          "matchPackagePatterns": [
            "*"
          ],
          "rangeStrategy": "replace"
        },
        {
          "matchDatasources": [
            "docker"
          ],
          "matchPackageNames": [
            "vernaillen/circleci-pnpm"
          ]
        }
      ],
      "lockFileMaintenance": {
        "enabled": false
      },
      "vulnerabilityAlerts": {
        "labels": [
          "security"
        ]
      },
      "ignoreNpmrcFile": true
    }
  },
  "devDependencies": {
    "@telus/remark-config": "^2.2.4",
    "editorconfig-checker": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^11.0.0"
  }
}
