{
  "version": "1.0.6",
  "name": "@vernaillen/renovate-config",
  "description": "vernaillen preset configs for Renovate",
  "homepage": "https://github.com/vernaillen/renovate-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/vernaillen/renovate-config.git"
  },
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "vernaillen",
    "renovate",
    "config"
  ],
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/vernaillen/renovate-config/issues"
  },
  "scripts": {
    "lint": "npx editorconfig-checker --config .editorconfig"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "group:allNonMajor",
        ":semanticCommitTypeAll(chore)"
      ],
      "packageRules": [
        {
          "matchPackagePatterns": [
            "*"
          ],
          "rangeStrategy": "replace"
        },
        {
          "matchDatasources": [
            "docker"
          ],
          "matchPackageNames": [
            "vernaillen/circleci-pnpm"
          ]
        }
      ],
      "lockFileMaintenance": {
        "enabled": false
      },
      "vulnerabilityAlerts": {
        "labels": [
          "security"
        ]
      },
      "ignoreNpmrcFile": true
    }
  },
  "devDependencies": {
    "editorconfig-checker": "^5.0.1"
  }
}
